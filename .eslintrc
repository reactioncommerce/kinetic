{
  "extends": "@reactioncommerce/eslint-config/browser-react-ts",
  "rules": {
    "import/order": [
      1,
      {
        "pathGroups": [
          {
            "pattern": "@components/*",
            "group": "parent"
          },
          {
            "pattern": "@hooks/*",
            "group": "parent"
          },
          {
            "pattern": "@utils/*",
            "group": "parent"
          },
          {
            "pattern": "@containers/*",
            "group": "parent"
          },
          {
            "pattern": "@graphql/*",
            "group": "parent"
          },
          {
            "pattern": "types/*",
            "group": "parent"
          }
        ],
        "pathGroupsExcludedImportTypes": [],
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "prettier/prettier": [
      "error"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-console": "warn",
    "no-debugger": "error",
    "no-use-before-define": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true
      }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all"
      }
    ]
  }
}