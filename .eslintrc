{
  "extends": "@reactioncommerce/eslint-config/browser-react-ts",
  "rules": {
    "no-shadow": "off", // replaced by ts-eslint rule below
    "@typescript-eslint/no-shadow": "error",
    "import/order": [
      1,
      {
        "pathGroups": [
          {
            "pattern": "@components/*",
            "group": "parent"
          },
          {
            "pattern": "@hooks/*",
            "group": "parent"
          },
          {
            "pattern": "@utils/*",
            "group": "parent"
          },
          {
            "pattern": "@containers/*",
            "group": "parent"
          },
          {
            "pattern": "@graphql/*",
            "group": "parent"
          },
          {
            "pattern": "types/*",
            "group": "parent"
          }
        ],
        "pathGroupsExcludedImportTypes": [],
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ]
  }
}